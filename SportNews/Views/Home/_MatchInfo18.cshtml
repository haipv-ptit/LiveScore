<script type="text/javascript">
    $(document).ready(function () {
        $('.lnki').click(function (e) {
            e.preventDefault();
            $.ajax({
                url: '/Home/MatchDetail',
                type: 'GET',
                async: false,
                dataType: 'html',
                data: {
                    id: $(this).closest('tr').attr('id')
                },
                success: function (data) {
                    $('#match').html(data);
                    //e.target;
                    //e.relatedTarget;
                }
            });
            return false;
        }
            );

    });
</script>