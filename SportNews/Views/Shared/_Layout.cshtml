@using SportNews.Utility
@using SportNews.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-1.10.2.min.js" type="text/javascript"></script>
    <style>
        #headim {
            background-image: url('../../Upload/new_bgrs.jpg');
            background-repeat: no-repeat;
            background-size: 100% 100%;
            height: 350px;
        }

        .affix {
            top: 0;
            width: 100%;
            z-index: 9999 !important;
        }

        .bgh {
            color: #f2f2f2;
        }

        body {
            background: #317006 url(../../Upload/Russia_FIFA_2018.png) top left;
            background-repeat: no-repeat;
            background-size: 100% 100%;
            z-index: -9999999999999999;
            padding-top: 0px !important;
            position: relative;
        }

        .affix + .container-fluid {
            padding-top: 70px;
        }

        .navbar-header {
            /*background-color: #0000cc;*/
            border-color: #f2f2f2;
            color: white;
        }

        .navbar-collapse, .navbar-inverse {
            /*background-color: #0000cc;*/
            border-color: #f2f2f2;
            color: #f2f2f2;
        }

        .navbar-brand {
            color: #d8d8d8 !important;
        }

            .navbar-brand:hover {
                color: red !important;
            }

        .navbar-nav > li > a {
            color: #d8d8d8 !important;
        }

            .navbar-nav > li > a:hover {
                color: red !important;
            }

        .navbar-inverse .navbar-nav > .active > a, .navbar-inverse .navbar-nav > .active > a:hover, .navbar-inverse .navbar-nav > .active > a:focus {
            color: black !important;
            background-color: darkgrey;
        }

        .row.content {
            height: 100%;
            background-color: #f1f1f1;
        }

        .sidenav {
            /*padding-top: 20px;*/
            background-color: #f1f1f1;
            height: 100%;
        }

        /*footer {
            background-color: #555;
            color: white;
            padding: 15px;
        }*/

        /*footer {
            position: absolute;
            bottom: 0;
            width: 100%;
            height: 60px;
            background-color: #555;
            color: white;*/
        /*padding: 15px;*/
        /*}*/

        @@media screen and (max-width: 767px) {
            .sidenav {
                height: auto;
                padding: 15px;
            }

            .row.content {
                height: auto;
                background-color: #f1f1f1;
            }
        }
    </style>
</head>
<body>
    <div>
        <h2 class="bgh">SportNews.com</h2>
    </div>
    <div class="container-fluid" style="background-color:#F44336;color:#fff;height:300px;" id="headim">

    </div>
    <div class="navbar navbar-inverse navbar-dark bg-dark" data-spy="affix" data-offset-top="197">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Sport News", "Index", "Home", new { area = "" }, new { @class = "navbar-brand Html.IsActive('Home', 'Wc18Detail')" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" id="myNav">
                    <li class='@Html.IsActive("Home", "Wc18Detail")'>@Html.ActionLink("World Cup 2018", "Wc18Detail", "Home")</li>
                    <li class='@Html.IsActive("History", "Index")'>@Html.ActionLink("History", "Index", "History")</li>
                    <li class='@Html.IsActive("Home", "Contact")'>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial", new LoginViewModel())
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="container-fluid text-center">
            <div class="row content">
                <div class="col-sm-4 sidenav">
                    <div class="well">
                        <a href="#">
                            <img src="~/Upload/exp_idea.jpg" alt="Specialists idea" border="0">
                        </a>
                    </div>
                    <div class="well">

                        <a href="#">
                            <img src="~/Upload/free-sport.jpg" alt="peak bt" border="0">
                        </a>
                    </div>
                    <div class="well">

                        <a href="#">
                            <img src="~/Upload/hovideo.jpg" alt="hot video" border="0">
                        </a>
                    </div>
                </div>
                <div class="col-sm-6 text-left">
                    @RenderBody()
                </div>
                <div class="col-sm-2 sidenav">
                    <div class="well">
                        <p>FOR ADVERTISEMENT</p>
                    </div>
                    <div class="well">
                        <p>FOR ADVERTISEMEN</p>
                    </div>
                </div>
            </div>
        </div>
        @*<hr />*@
        <footer>
            <p>&copy; @DateTime.Now.Year - SportNews</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
